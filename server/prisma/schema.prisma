datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  email   String    @unique
  name    String?
  Message Message[]
}

model Message {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  content  String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId
}
